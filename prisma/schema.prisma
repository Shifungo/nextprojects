// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Activity {
  id             Int           @id @default(autoincrement())
  date           String
  type           String
  start_time     String
  end_time       String
  payment_method PaymentMethod
  moneyChange   String
  description    String
  month          String
  card_payment   CARDPayment?  @relation(fields: [card_id], references: [id])
  card_id        Int?
  cash_payment   CASHPayment?  @relation(fields: [cash_id], references: [id])
  cash_id        Int?
  transfer_payment TransferPayment? @relation(fields: [transfer_id], references: [id])
  transfer_id    Int?
  pix_payment   PIXPayment?  @relation(fields: [pix_id], references: [id])
  pix_id        Int?
}

enum PaymentMethod {
  CASH
  CARD
  TRANSFER
  PIX
}

model CASHPayment {
  id          Int        @id @default(autoincrement())
  Activity   Activity[] 
}

model TransferPayment {
  id          Int        @id @default(autoincrement())
  bank_account_number BankAccount @relation(fields: [bank_account_id], references: [id])
  bank_account_id Int
  Activity   Activity[]
}

model PIXPayment{
  id          Int        @id @default(autoincrement())
  bank_account_number BankAccount @relation(fields: [bank_account_id], references: [id])
  bank_account_id Int
  Activity   Activity[]
}

model CARDPayment {
  id          Int        @id @default(autoincrement())
  card_number String
  card_name   String
  card_close_day Int
  card_due_day Int
  card_limit  String
  bank_account_number BankAccount @relation(fields: [bank_account_id], references: [id])
  bank_account_id Int
  Activity   Activity[]
}

model BankAccount {
  id          Int        @id @default(autoincrement())
  bank_name   String
  card       CARDPayment[]
  transfer    TransferPayment[]
  pix         PIXPayment[]
}

